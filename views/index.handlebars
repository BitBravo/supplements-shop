{{!-- Top sold section. --}}
<section class="product-showcase top-sold grey lighten-3 z-depth-2">
    <div class="row container">
        <div class="col s12">
            <h4>
                <a class="waves-effect waves-light btn all-products"><i class="fa fa-list"></i> جميع المنتجات</a>
                <span class="right">المنتجات الأكثر مبيعا</span>
            </h4>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {{#each Data.TopProducts }}
            <div class="col m12 l6 xl4">
                <div class="card sticky-action product-card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="{{ this.ProductImage }}">
                    </div>
                    <div class="card-content">
                        <span class="card-title grey-text text-darken-4">
                            <a href="javascript:void(0)">
                                <i class="material-icons activator right black-text">more_vert</i>
                            </a>
                            <a href="javascript:void(0)" class="black-text">
                                {{ this.ProductName }}
                            </a>
                        </span>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">
                            <i class="material-icons right">close</i>
                            {{ this.ProductName }}
                        </span>
                    </div>
                    <div class="card-action price right-align">
                        <div class="row center-align">
                            <div class="col s12">
                                <span class="grey-text">
                                    <del>300.00 DH</del>
                                </span>
                            </div>
                            <div class="col s12">
                                <span>
                                    <b class="green-text">120.50 DH</b>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-action right-align">
                        <a href="javascript:void(0)" class="green-text">شراء</a>
                        <a href="javascript:void(0)" class="green-text" title="أضف إلى السلة">
                            <i class="fa fa-cart-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

