{{!-- QuillJS. --}}
<link rel="stylesheet" href="/assets/quill/dist/quill.snow.css">
<script src="/assets/quill/dist/quill.min.js"></script>

{{!-- The products script. --}}
<script src="/assets/js/dashboard/products.js"></script>

<div class="dashboard dashboard-products">
	<div class="row">
		<aside class="col s2">
			{{> sidebar NewMail=Data.NewMail }}
		</aside>

		<div class="col s10 container dashboard__grid">
			<div class="row">
				<div class="card-panel">
					<div class="row valign-wrapper">
						<div class="col s12">
							<h4 class="grey-text right-align">
								[{{ Data.Products.length }}] المنتوجات
								<i class="fa fa-prescription-bottle"></i>
							</h4>
						</div>
					</div>
					<div class="row">
						<div class="col s12">
							<ul id="products-tabs" class="tabs">
								<li class="tab col s4"><a href="#products-edition-tab">تحرير المنتوجات</a></li>
								<li class="tab col s4"><a href="#products-creation-tab">إضافة منتج جديد</a></li>
								<li class="tab col s4"><a href="#products-restoration-tab">استعادة المنتجات</a></li>
							</ul>
							<div id="products-creation-tab" class="col s12">
								<div class="row">
									<div class="col s8 product-creation__main">
										<div class="row">
											<div class="input-field col s12">
												<input id="product-name" type="text" name="product-name" class="validate" data-length="80"
													required>
												<label for="product-name">اسم المنتج</label>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<input id="product-nutrition-info" type="url" name="product-nutrition-info" class="validate"
													required>
												<label for="product-nutrition-info">حقائق غذائية</label>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<label>وصف المنتج</label>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<div id="desc-editor"></div>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<label>استعمال</label>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<div id="usage-editor"></div>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<label>تحذيرات</label>
											</div>
										</div>
										<div class="row">
											<div class="input-field col s12">
												<div id="warning-editor"></div>
											</div>
										</div>
									</div>
									<div class="col s3 offset-s1">
										<div class="row">
											<div class="input-field col s12">
												<select id="product-category">
													{{#each Data.CategoriesData }}
													<optgroup label="{{ this.CategoryName }}">
														{{#each this.SubCategories}}
														<option value="{{ this.CategoryID }}">{{ this.CategoryName }}</option>
														{{/each}}
													</optgroup>
													{{/each}}
												</select>
												<label>فئة المنتج</label>
											</div>
											<div class="input-field col s12">
												<select id="product-brand">
													{{#each Data.Brands }}
													<option value="{{ this.BrandID }}">{{ this.BrandName }}</option>
													{{/each}}
												</select>
												<label>العلامة التجارية للمنتج</label>
											</div>
										</div>
										<div class="row">
											<div class="col s12 nutrition-facts-preview">
												<img src="/assets/img/backgrounds/placeholder.jpg" class="materialboxed"
													alt="Nutrition facts preview.">
											</div>
										</div>
									</div>
								</div>
							</div>
							<div id="products-edition-tab" class="col s12">
								<div class="row">
									<div class="col s12">
										{{#if Data.Products}}
										<table class="striped highlighted-table">
											<thead>
												<tr>
													<th>اسم المنتج</th>
													<th>الكمية</th>
													<th>الفئة</th>
													<th>تاريخ الإضافة</th>
												</tr>
											</thead>
											<tbody class="product-list">
												{{#each Data.Products }}
												<tr data-product-id="{{ this.ProductID }}">
													<td>{{ this.ProductName }}</td>
													<td>{{ this.Quantity }}</td>
													<td>{{ this.Category }}</td>
													<td>{{ formatDate this.AddedDate }}</td>
												</tr>
												{{/each}}
											</tbody>
										</table>

										{{else}}
										<ul class="collection">
											<li class="collection-item center-align">لا توجد منتوجات حاليا</li>
										</ul>
										{{/if}}
									</div>
								</div>
							</div>
							<div id="products-restoration-tab" class="col s12">
								<div class="row">
									<div class="col s12">
										{{#if Data.DeletedProducts}}
										<ul class="collection">
											{{#each Data.DeletedProducts}}
											<li class="collection-item">
												<div>
													<input type="hidden" value="{{ this.ProductID }}">
													<a href="javascript:void(0)" class="secondary-content btn-restore"><i
															class="material-icons">restore</i></a>

													<b>{{ this.ProductName }}</b>
												</div>
											</li>
											{{/each}}
										</ul>
										{{else}}
										<ul class="collection">
											<li class="collection-item center-align">لا توجد منتجات محذوفة</li>
										</ul>
										{{/if}}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div id="product-creation-modal" class="modal bottom-sheet">
			<form id="product-creation-stock-form">
				<div class="modal-content">
					<div class="row">
						<div class="col s12 right-align">
							<h4>إضافة مخزون</h4>
						</div>
					</div>
					<div class="row">
						<div class="col s12 right-align">
							<label>صورة المنتوج
								<input id="product-creation-stock-image" type="url" class="validate right-align" required>
							</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12 right-align">
							<label>حقائق غذائية
								<input id="product-creation-stock-nutrition" type="url" class="validate right-align" required>
							</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12 right-align">
							<label>الكمية
								<input id="product-creation-stock-quantity" min="0" type="number" class="validate right-align" required>
							</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12 right-align">
							<label>الوزن <small class="grey-text">&rlm;(كلغ)&rlm;</small>
								<input id="product-creation-stock-weight" min="0" step="0.001" type="number"
									class="validate right-align" required>
							</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12 right-align">
							<label>النكهة
								<select id="product-creation-stock-flavor">
									{{#each Data.Flavors }}
									<option value="{{ this.FlavorID }}">{{
												this.FlavorName
											}}
									</option>
									{{/each}}
								</select>
							</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12 right-align">
							<label>السعر <small class="grey-text">&rlm;(درهم)&rlm;</small>
								<input id="product-creation-stock-price" min="0" type="number" step="0.01" class="validate right-align"
									required>
							</label>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<input class="waves-effect waves-green btn-flat" type="submit" value="إضافة المخزون">
					<a href="#!" class="modal-close waves-effect waves-green btn-flat">أغلق</a>
				</div>
			</form>
		</div>

		<div id="product-edition-modal" class=" modal modal-fixed-footer">
			<form id="product-edition-form">
				<div class="modal-content">
					<h4 class="right-align">تحديث المنتج</h4>
					<input type="hidden" name="product-id">
					<div class="row">
						<div class="input-field col s12">
							<input id="product-name-edition" type="text" name="product-name" class="validate" data-length="80"
								required>
							<label for="product-name-edition">اسم المنتج</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label>وصف المنتج</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<div id="desc-editor-edit"></div>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label>استعمال</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<div id="usage-editor-edit"></div>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label>تحذيرات</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<div id="warning-editor-edit"></div>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s6">
							<select id="product-category-edit">
								{{#each Data.CategoriesData }}
								<option value="{{ this.CategoryID }}">{{ this.CategoryName }}
								</option>
								{{/each}}
							</select>
							<label>فئة المنتج</label>
						</div>
						<div class="input-field col s6">
							<select id="product-brand-edit">
								{{#each Data.Brands }}
								<option value="{{ this.BrandID }}">{{ this.BrandName }}
								</option>
								{{/each}}
							</select>
							<label>العلامة التجارية للمنتج</label>
						</div>
					</div>
					<div class="row stock-section">
						<div class="input-field col s12">
							<p class="grey-text lighten-3">المخزون</p>
							<table class="striped">
								<thead>
									<tr>
										<th></th>
										<th class="center-align">الكمية</th>
										<th class="center-align">الوزن <small class="grey-text">&rlm;(كلغ)&rlm;</small>
										</th>
										<th class="center-align">السعر <small class="grey-text">&rlm;(درهم)&rlm;</small>
										</th>
										<th class="center-align">النكهة</th>
										<th class="center-align">صورة المنتوج</th>
										<th class="center-align">الحقائق غذائية</th>
									</tr>
								</thead>
								<tbody id="edition-stock-list"></tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<input class="waves-effect waves-green btn-flat" type="submit" value="تحديث">
					<a id="add-stock-edition" href="javascript:void(0)" class="waves-effect waves-green btn-flat">إضافة
						مخزون</a>
					<a href="javascript:void(0)" class="modal-close waves-effect waves-green btn-flat">أغلق</a>
				</div>
			</form>
		</div>
	</div>
</div>