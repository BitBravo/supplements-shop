<div class="dashboard dashboard-config">
	<div class="row container">
		<div class="col s12 dashboard__grid">
			<div class="row">
				<div class="card-panel">
					<div class="row valign-wrapper">
						<div class="col s12">
							<h4 class="grey-text right-align">
								الإعدادات
								<i class="fa fa-cog"></i>
							</h4>
						</div>
					</div>
					<div class="row">
						<div class="col s12">
							<form action="/dashboard/config" method="POST">
								<div class="row">
									<div class="input-field col s12">
										<input id="primary-phone-number" type="tel" class="validate" value="{{ Data.Config.Phone.Primary }}"
											name="primary-phone" required>
										<label for="primary-phone-number">رقم الهاتف الرئيسي</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s12">
										<input id="secondary-phone-number" type="tel" class="validate"
											value="{{ Data.Config.Phone.Secondary }}" name="secondary-phone" required>
										<label for="secondary-phone-number">رقم الهاتف الثانوي</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s12">
										<input id="fixed-phone-number" type="tel" class="validate" value="{{ Data.Config.Phone.Fixed }}"
											name="fixed-phone" required>
										<label for="fixed-phone-number">رقم الهاتف الثابت</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s12">
										<input id="email" type="email" class="validate" value="{{ Data.Config.Email }}" name="email"
											required>
										<label for="email">البريد الإلكتروني</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s6">
										<input id="facebook-page" type="text" class="validate" value="{{ Data.Config.Facebook.Name }}"
											name="facebook-name" required>
										<label for="facebook-page">اسم صفحة الفيسبوك</label>
									</div>
									<div class="input-field col s6">
										<input id="facebook-url" type="url" class="validate" value="{{ Data.Config.Facebook.Link }}"
											name="facebook-url" required>
										<label for="facebook-url">رابط صفحة الفيسبوك</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s6">
										<input id="instagram-page" type="text" class="validate" value="{{ Data.Config.Instagram.Name }}"
											name="instagram-name" required>
										<label for="instagram-page">اسم صفحة إينستاجرام</label>
									</div>
									<div class="input-field col s6">
										<input id="instagram-url" type="url" class="validate" value="{{ Data.Config.Instagram.Link }}"
											name="instagram-url" required>
										<label for="instagram-url">رابط صفحة إينستاجرام</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s6">
										<input id="youtube-channel" type="text" class="validate" value="{{ Data.Config.Youtube.Name }}"
											name="youtube-name" required>
										<label for="youtube-channel">اسم قناة اليوتيوب</label>
									</div>
									<div class="input-field col s6">
										<input id="youtube-url" type="url" class="validate" value="{{ Data.Config.Youtube.Link }}"
											name="youtube-url" required>
										<label for="youtube-url">رابط قناة اليوتيوب</label>
									</div>
								</div>
								<div class="row form-controls">
									<div class="col s12 center-align">
										<input type="submit" class="btn btn-large waves-effect waves-light grey lighten-3" value="تحديث">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="card-panel">
					<div class="row valign-wrapper">
						<div class="col s12">
							<h4 class="grey-text right-align">
								كلمه السر
								<i class="fa fa-key"></i>
							</h4>
						</div>
					</div>
					<div class="row">
						<div class="col s12">
							<form action="/dashboard/config?_method=PUT" method="POST">
								<div class="row">
									<div class="input-field col s12">
										<input id="password" type="password" class="validate" name="password" required>
										<label for="password">كلمة السر الجديدة</label>
									</div>
								</div>
								<div class="row">
									<div class="input-field col s12">
										<input id="password-old" type="password" class="validate" name="password-old" required>
										<label for="password-old">كلمة المرور الحالية</label>
									</div>
								</div>
								<div class="row form-controls">
									<div class="col s12 center-align">
										<input type="submit" class="btn btn-large waves-effect waves-light grey lighten-3" value="تحديث">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>