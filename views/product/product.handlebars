<script src="/assets/js/product.js"></script>

<section class="container product-section" data-variant-id="{{ Data.ProductVariant.VariantID }}">
	<div class="row product-section__upper">
		<div class="col s8 white z-depth-2 product-section__upper__header">
			<div class="col s3 product-section__upper__header__img">
				<img src="{{ Data.ProductVariant.VariantImage }}" alt="{{ Data.ProductInfo.ProductName }}'s image.">
			</div>
			<div class="col s9">
				<h4 class="grey lighten-4 center-align">{{ Data.ProductInfo.ProductName }}</h4>
				<table class="centered striped grey lighten-4">
					<tbody>
						<tr>
							<td>
								<div class="chip">&rlm;{{ formatWeight Data.ProductVariant.Weight }}
									{{ weightUnite Data.ProductVariant.Weight }}
								</div>
							</td>
							<td>
								الوزن
							</td>
							<td>
								<div class="chip">&rlm;{{ Data.ProductInfo.CategoryName }}</div>
							</td>
							<td>
								الفئة
							</td>
						</tr>
						<tr>
							<td>
								<div class="chip">&rlm;{{ Data.ProductVariant.FlavorName }}</div>
							</td>
							<td>النكهة</td>
							<td>
								<div class="chip">&rlm;{{ Data.ProductInfo.BrandName }}</div>
							</td>
							<td>العلامة التجارية</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="col s3 offset-s1 white z-depth-2 product-section__upper__action">
			<div class="row">
				<div class="col s12">
					<div class="input-field col s12 product-variant-select">
						<select>
							{{#each Data.SimilarVariants }}
								<optgroup label="&rlm;{{ formatWeight this.Weight }} {{ weightUnite this.Weight }}">
									{{#each this.Flavors }}
										<option value="{{ this.VariantID }}">{{ this.FlavorName }}</option>
									{{/each}}
								</optgroup>
							{{/each}}
						</select>
						<label>منتجات مماثلة</label>
					</div>
				</div>
			</div>
			<div class="row center-align product-section__price">
				<div class="col s12">
					{{#displayOldPrice Data.ProductVariant.OldPrice Data.ProductVariant.NewPrice}}
						<div class="col s12">
							<span class="grey-text">
								<del>{{ formatCurrency Data.ProductVariant.OldPrice }}</del>
							</span>
						</div>
					{{/displayOldPrice}}
					<div class="col s12">
						<span>
							<b class="green-text">{{ formatCurrency Data.ProductVariant.NewPrice }}</b>
						</span>
					</div>
				</div>
			</div>
			<div class="row ">
				<div class="col s12">
					<a href="javascript:void(0)" class="btn btn-large waves-effect green product-card__btn">اشتري الآن</a>
					<a href="javascript:void(0)" class="btn waves-effect white green-text product-card__btn"
						title="أضف إلى السلة">
						<i class="fa fa-cart-plus"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="row product-section__lower">
		<ul class="col s8 white collapsible product-section__lower__main">
			<li class="active">
				<div class="collapsible-header"><i class="material-icons">description</i>الوصف</div>
				<div class="collapsible-body">{{{ Data.ProductInfo.Description }}}</div>
			</li>
			<li>
				<div class="collapsible-header"><i class="material-icons">check</i>طريقة الاستخدام</div>
				<div class="collapsible-body">{{{ Data.ProductInfo.Usage }}}</div>
			</li>
			<li>
				<div class="collapsible-header"><i class="material-icons">warning</i>التحذيرات</div>
				<div class="collapsible-body">{{{ Data.ProductInfo.Warning }}}</div>
			</li>
		</ul>
		<div class="col s3 offset-s1 white z-depth-2 product-section__lower__side">
			<h4 class="center-align">حقائق غذائية</h4>
			<img class="responsive-img" src="{{ Data.ProductVariant.NutritionInfo }}"
				alt="{{ Data.ProductInfo.ProductName }}'s nutrition facts.">
		</div>
	</div>
</section>