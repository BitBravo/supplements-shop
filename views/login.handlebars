<section class="login-section">
    <div class="login-content z-depth-1 grey lighten-3">
        <form method="POST" action="/login">
            <div class="row">
                <div class="col s12">
                    <img src="/assets/img/logos/logo.png" alt="Supplmenets Maroc Logo.">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password-field" type="password" class="validate" required>
                    <label for="password-field">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <button class="btn waves-effect waves-light btn-large" type="submit">Login</button>
                </div>
                <div class="col s6">
                    <button class="btn waves-effect waves-light btn-large back-btn" type="button">Go Back</button>
                </div>
            </div>
        </form>
    </div>
</section>