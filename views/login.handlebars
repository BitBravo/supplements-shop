{{!-- The login script. --}}
<script src="/assets/js/login.js"></script>

<section class="center login-section">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="z-depth-1 grey lighten-3 login-section__content">
                <form method="POST" action="/login" id="login-form">
                    <div class="row">
                        <div class="col s12 m12 l12">
                            <img src="/assets/img/logos/logo.png" alt="Supplmenets Maroc Logo."
                                class="login-section__img">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 m12 l12">
                            <input id="password-field" type="password" class="validate" name="password" required>
                            <label for="password-field">كلمه السر</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12 l6">
                            <button class="btn waves-effect waves-light grey darken-3 btn-large login-section__btn"
                                type="submit">تسجيل
                                الدخول</button>
                        </div>
                        <div class="col s12 m12 l6">
                            <button
                                class="btn waves-effect waves-light grey darken-3 btn-large back-btn login-section__btn"
                                type="button">عد
                                للصفحة السابقة</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>