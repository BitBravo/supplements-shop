<!DOCTYPE html>

<html lang="ar">

<head>

	{{!-- Meta data. --}}
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<meta name="author" content="EOussama">
	<meta name="application-name" content="Supplements Maroc">
	<meta name="description" content="Online store for selling workout-related protein products.">
	<meta name="keywords" content="store, e-commerce">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	{{!-- FontAwesome. --}}
	<link rel="stylesheet" href="/assets/@fortawesome/fontawesome-free/css/all.min.css">

	{{!-- Materialize Stylesheet. --}}
	<link rel="stylesheet" href="/assets/materialize-css/dist/css/materialize.min.css">

	{{!-- Material Icons. --}}
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

	{{!-- The main stylesheet. --}}
	<link rel="stylesheet" href="/assets/css/main.css">

	{{!-- JQuery Script. --}}
	<script src="/assets/jquery/dist/jquery.min.js"></script>

	{{!-- Materialize Script. --}}
	<script src="/assets/materialize-css/dist/js/materialize.min.js"></script>

	{{!-- The main script. --}}
	<script src="/assets/js/main.js"></script>

	{{!-- The contact script. --}}
	<script src="/assets/js/contact.js"></script>

	{{!-- The cart script --}}
	<script src="/assets/js/cart.js"></script>

	{{!-- The title. --}}
	<title>Supplements Maroc</title>
</head>

<body class="loading">
	{{!-- The loader --}}
	<div id="global-preloader" class="grey lighten-3">
		<div class="row">
			<div class="col s12">
				<img src="/assets/img/logos/logo.png" alt="Supplements Maroc logo.">
			</div>
		</div>
		<div class="row">
			<div class="col s12">
				<h6 class="grey-text">جار التحميل...&rlm;</h6>
			</div>
		</div>
	</div>

	{{!-- The nav's partial. --}}
	{{> nav }}

	{{!-- Contact Modal. --}}
	<div id="contact-modal" class="modal modal-fixed-footer contact-modal">
		<form id="contact-form" class="col s12">
			<div class="modal-content">
				<div class="row">
					<div class="col s12">
						<h4 class="right-align">اتصل بنا</h4>
					</div>
				</div>

				<div class="row contact-modal__content">
					<div class="row">
						<div class="input-field col s12">
							<input id="message-username" type="text" class="right-align validate" data-length="100" name="username"
								minlength="2" required>
							<label for="message-username">اسم المستخدم</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="message-email" type="email" class="right-align validate" data-length="80" name="email"
								required>
							<label for="message-email">البريد الإلكتروني</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<textarea id="message-message" class="right-align materialize-textarea" data-length="2000" rows="5"
								name="message" minlength="5" required></textarea>
							<label for="message-message">رسالة</label>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<input type="submit" class="waves-effect waves-green btn-flat" value="إرسال">
				<a href="javascript:void(0)" class="modal-close waves-effect waves-green btn-flat">أغلق</a>
			</div>
		</form>
	</div>

	{{!-- The cart modal --}}
	<div id="cart-modal" class="modal modal-fixed-footer">
		<div class="modal-content">
			<h4 class="right-align">عربة التسوق</h4>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-green btn-flat">أغلق</a>
		</div>
	</div>

	{{!-- Scroll back to top button. --}}
	<a href="javascript:void(0)" id="scroll-to-top" title="Scroll to top" class="visible scroll-to-top">
		<i class="fas fa-chevron-up fa-2x"></i>
	</a>

	{{!-- The main content of the page. --}}
	<main>
		{{{body}}}
	</main>

	{{!-- The footer's partial. --}}
	{{> footer }}

	{{#if loggedIn }}
		{{> sidebar NewMail=Data.NewMail }}
	{{else}}
		<div id="dashboard-dropdown" class="dropdown-content"></div>
	{{/if}}
</body>

</html>
